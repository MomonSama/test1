---
import Layout from '../layouts/Layout.astro';
---
<Layout>
	<div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white">
		<div class="max-w-5xl mx-auto px-4 py-16">
			<h1 class="text-4xl font-bold mb-4">Welcome :)</h1>
			<p class="text-xl mb-8">I will add something here soon</p>
			<div class="flex flex-wrap gap-4">
				<a href="/rankings" class="bg-white text-orange-600 hover:bg-gray-100 px-6 py-3 rounded-md font-medium transition-colors">
					View Rankings
				</a>
				<a href="/matches" class="bg-transparent hover:bg-orange-700 border border-white px-6 py-3 rounded-md font-medium transition-colors">
					Explore Matches
				</a>
			</div>
		</div>
	</div>

	<div class="max-w-5xl mx-auto px-4 py-12">
		<div class="grid md:grid-cols-2 gap-8">
			<!-- Rankings Section -->
			<div class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
				<h2 class="text-2xl font-light text-black mb-4">Player Rankings</h2>
				<p class="text-gray-600 mb-6">See who's leading the competition with our up-to-date player rankings.</p>
				<a href="/rankings" class="text-orange-500 hover:text-orange-700 font-medium inline-flex items-center">
					View Full Rankings
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
					</svg>
				</a>
			</div>

			<!-- Super Matches Section -->
			<div class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
				<h2 class="text-2xl font-light text-black mb-4">Super Matches</h2>
				<p class="text-gray-600 mb-6">Stay updated with the latest super matches and never miss an exciting game.</p>
				<a href="/matches" class="text-orange-500 hover:text-orange-700 font-medium inline-flex items-center">
					View All Matches
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
						<path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
					</svg>
				</a>
			</div>
		</div>
	</div>
	
	<!-- Add the Dark Mode Toggle Script -->
		<script>
  const userPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
  const savedTheme = localStorage.getItem('theme');

  if (savedTheme) {
    document.documentElement.classList.toggle('dark', savedTheme === 'dark');
  } else if (userPrefersDark) {
    document.documentElement.classList.add('dark');
  }

  function toggleDarkMode() {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  }
</script>
