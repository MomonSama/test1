---
// Get the current URL path to determine which link is active
const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-xl font-bold text-orange-500">?</a>
        </div>
        <div class="ml-6 flex space-x-4">
          <a 
            href="/rankings" 
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${currentPath === '/rankings' ? 'border-orange-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}`}
          >
            Rankings
          </a>
          <a 
            href="/matches" 
            class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${currentPath === '/matches' ? 'border-orange-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'}`}
          >
            Super Matches
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>